#-----------------------------------------------------------------------
# Compiler flags
#-----------------------------------------------------------------------

#
# gfortran
#
F90	= gfortran
F90OPTS = -fbacktrace

#-----------------------------------------------------------------------
# Define object files
#-----------------------------------------------------------------------
OBJ=csfgenerator.o

########################################################################
# Rules to create the program
########################################################################
csfgenerator: $(OBJ)
	$(F90) $(F90OPTS) $(OBJ) -o csfgenerator
	rm -f *.o *~

%.o: %.f90
	$(F90) -c $(F90OPTS) $<

clean:
	rm -f *.o *~ csfgenerator
